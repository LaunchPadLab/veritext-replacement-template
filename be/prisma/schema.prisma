// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// MODELS
// Refrence https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#default

// User

model User {
  id    String     @id @default(uuid())
  name  String
  admin Boolean @default(false)
  email String     @unique
}

model Folder {
  id   String     @id @default(uuid())
  parentFolder Folder? @relation("folder", fields: [parentFolderId], references: [id])
  folder Folder[] @relation("folder")
  parentFolderId String?
  repository Repository
  name  String
  path String
  files File[]
}

model File {
  id   String     @id @default(uuid())
  folder Folder @relation(fields: [parentFolderId], references: [id])
  parentFolderId String
  repository Repository
  name  String
  path String
  url String
}

// ENUMS

enum Repository {
  VAULT
  EXHIBIT_SHARE
}

